<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Acitivity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/MVImage"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/film" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#33333c"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="영화"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33333c"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/RIDedit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:hint="아이디를 입력하세요" />
        <Button
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:id="@+id/CHButton"
            android:text="중복확인"
            android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/RPWedit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#ffffff"
            android:password="true"
            android:hint="비밀번호를 입력하세요" />
        <EditText
            android:id="@+id/RNamedit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#ffffff"
            android:privateImeOptions="defaultInputmode=korean"
            android:hint="이름을 입력하세요" />
        <EditText
            android:id="@+id/REmailedit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#ffffff"
            android:hint="이메일을 입력하세요" />

        <Button
            android:id="@+id/OKButton"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="회원가입" />


    </LinearLayout>


</LinearLayout>