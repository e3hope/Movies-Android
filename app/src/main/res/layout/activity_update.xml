<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/MVImage"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/film" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#33333c"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="영화"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33333c"
        android:orientation="vertical">
        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="회원정보수정"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:id="@+id/UID"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:gravity="center"
            android:text="개인정보입니다."
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/UPWedit"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:password="true"

                android:hint="비밀번호를 입력하세요" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/PWOKButton"
                android:text="확인"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/NewPWedit"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:layout_marginLeft="40dp"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:password="true"
            android:hint="새로운 비밀번호를 입력하세요" />
        <EditText
            android:id="@+id/NewPW2edit"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:password="true"
            android:hint="다시한번 비밀번호를 입력하세요" />
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="수정완료"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:id="@+id/UpdateButton"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>